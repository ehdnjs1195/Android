<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.step02activity">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Example2Activity"></activity>  <!--manifest.xml 안에는 모든 Activity가 명시되어 있어야 한다.-->
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />    <!--프로그래머가 의도한 대로 활성시키고-->

                <category android:name="android.intent.category.LAUNCHER" />    <!--처음에 런치할 때 시작되는 Activity-->
            </intent-filter>
        </activity>
    </application>

</manifest>