<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/listView"/>   <!--높이는 안가지지만 weight를 1로 가진다.-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">   <!--필요한 만큼만 높이를 가진다.-->
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/inputName"
            android:hint="이름..."/>      <!--폭은 안가지지만 가중치를 1로 갖는다.  EditText 둘이 같은 크기를 갖게 됨.-->
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/inputAddr"
            android:hint="주소..."/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addBtn"
            android:text="추가"/>     <!--필요한 만큼만 폭을 갖는다.-->

    </LinearLayout>


</LinearLayout>